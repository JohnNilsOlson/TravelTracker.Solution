@{
  Layout = "_Layout";
}

@model TravelTracker.Models.Traveller

<h3>@Html.Label($"Edit {Model.Name}")</h3>
<hr />
@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.TravellerId)
  <div class="form-group">
    @Html.Label("Traveller Name")
    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
  </div>
  <input type="submit" value="Edit Traveller" class="btn btn-outline-dark">
}
<hr />
<h5>@Html.ActionLink("Show all Travellers", "Index")</h5>
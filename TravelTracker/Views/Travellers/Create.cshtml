@{
  Layout = "_Layout";
}

@model TravelTracker.Models.Traveller

<h2>Add a new Traveller</h2>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.Label("Traveller Name")
    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
  </div>
  <input type="submit" value="Add new Traveller" class="btn btn-outline-dark"/>
}
<hr />
<h5>@Html.ActionLink("Show all Travellers", "Index")</h5>
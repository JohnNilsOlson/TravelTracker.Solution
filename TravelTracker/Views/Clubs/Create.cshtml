@{
  Layout = "_Layout";
}

@model TravelTracker.Models.Club

<h3>Add a new Club</h3>
<hr />
@using (@Html.BeginForm())
{
  <div class="form-group">
    @Html.Label("Club Name")
    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
  </div>
  <input type="submit" value="Add a new Club" class="btn btn-outline-dark">
}
<hr />
<h5>@Html.ActionLink("Show all Clubs", "Index")</h5>
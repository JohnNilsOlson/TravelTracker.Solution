@{
  Layout = "_Layout";
}

@model TravelTracker.Models.Destination

<h3>@Html.Label($"{Model.CityName} Details")</h3>
<hr />

@if (@Model.Travellers.Count == 0)
{
  <h3>No Travellers have Visited this Destination!</h3>
}
else
{
  <h5>Visited By</h5>
  @foreach(var join in Model.Travellers)
  {
    <h3>@Html.ActionLink($"{join.Traveller.Name}", "Details", "Travellers", new { id = join.Traveller.TravellerId })</h3>
  }
}
<hr/>
<h5>@Html.ActionLink("Edit Destination", "Edit", new { id = Model.DestinationId })</h5>
<h5>@Html.ActionLink("Remove Destination", "Delete", new { id = Model.DestinationId })</h5>
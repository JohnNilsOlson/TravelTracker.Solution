@{
  Layout = "_Layout";
}

@using TravelTracker.Models;
@model List<TravelTracker.Models.Destination>;

<h1>Destinations</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h3>No Destinations Have Been Added Yet</h3>
}

@foreach (Destination destination in Model)
{
  <h3>@Html.ActionLink($"{destination.CityName}", "Details", new { id = destination.DestinationId })</h3>
}
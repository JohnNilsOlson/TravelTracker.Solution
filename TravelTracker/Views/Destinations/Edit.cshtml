@{
  Layout = "_Layout";
}

@model TravelTracker.Models.Destination

<h3>@Html.Label($"Edit {Model.CityName}")</h3>
<hr />
@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.DestinationId)
  <div class="form-group">
    @Html.Label("City Name")
    @Html.TextBoxFor(model => model.CityName, new {@class="form-control"})
  </div>
  <input type="submit" value="Edit Destination" class="btn btn-outline-dark">
}
<hr />
<h5>@Html.ActionLink("Show all Destinations", "Index")</h5>